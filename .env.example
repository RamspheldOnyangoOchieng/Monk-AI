# API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# LLM Provider Configuration
# Options: "openai" or "gemini"
LLM_PROVIDER=openai

# Model Configuration
# For OpenAI: "gpt-4o", "gpt-4", "gpt-3.5-turbo"
# For Gemini: "gemini-2.5-flash-preview", "gemini-pro"
LLM_MODEL=gpt-4o

# Database Configuration
DATABASE_URL=sqlite:///./app.db

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Development Settings
DEBUG=true
ENVIRONMENT=development

# AI API Keys - At least one is required
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENROUTER_API_KEY=your_openrouter_key_here
NOVITA_API_KEY=your_novita_key_here

# Database Configuration
DATABASE_URI=sqlite:///./monk_ai.db

# Redis Configuration (optional, uses mock if not available)
REDIS_CACHE_EXPIRE_SECONDS=3600

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30

# GitHub Integration (optional)
GITHUB_TOKEN=your_github_token_here

# Agent Configuration
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT_SECONDS=300

# Logging
LOG_LEVEL=INFO

# Storage
STORAGE_PATH=./data